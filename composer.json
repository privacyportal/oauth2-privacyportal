{
    "name": "privacyportal/oauth2-privacyportal",
    "description": "PrivacyPortal OAuth 2.0 Client Provider for The PHP League OAuth2-Client",
    "license": "MIT",
    "authors": [
        {
            "name": "Privacy Portal",
            "homepage": "https://github.com/privacyportal"
        },
        {
            "name": "Steven Maguire",
            "email": "stevenmaguire@gmail.com",
